{
  /**
   * TypeScript Configuration File
   * 
   * Defines compiler options and project settings for the TypeScript build process.
   * This configuration is optimized for a React application with modern JavaScript features
   * and strict type checking enabled.
   * 
   * For detailed documentation: https://aka.ms/tsconfig
   */
  
  "compilerOptions": {
    /* Core Build Configuration
     * These options determine the JavaScript output version and available features
     */
    "target": "es5",                          /* Compiles to ES5 for broader browser compatibility */
    "lib": ["dom", "dom.iterable", "esnext"], /* Includes modern JS/DOM APIs and language features */
    "jsx": "react-jsx",                       /* Enables React JSX transformation without importing React */
    
    /* Module Resolution Configuration
     * Controls how TypeScript finds and loads dependent modules
     */
    "module": "esnext",                       /* Uses ECMAScript module syntax for better tree-shaking */
    "moduleResolution": "node",               /* Applies Node.js-style module resolution */
    "baseUrl": ".",                           /* Sets the root directory for relative module imports */
    "paths": {
      "@/*": ["./src/*"]                      /* Enables '@' alias for src directory imports */
    },
    
    /* Interoperability Flags
     * Options for working with different module formats and JavaScript files
     */
    "allowJs": true,                          /* Enables JavaScript files processing */
    "esModuleInterop": true,                  /* Simplifies module imports from CommonJS */
    "allowSyntheticDefaultImports": true,     /* Allows default imports from modules without default export */
    
    /* Type System Rules
     * Strict type checking configuration for improved code reliability
     */
    "strict": true,                           /* Enables all strict type checking options */
    "noImplicitAny": true,                    /* Requires explicit type declarations */
    "strictNullChecks": true,                 /* Enforces null/undefined handling */
    "strictFunctionTypes": true,              /* Ensures correct function parameter typing */
    "noImplicitThis": true,                   /* Requires explicit 'this' typing */
    "noUnusedLocals": true,                   /* Flags unused local variables */
    "noUnusedParameters": true,               /* Flags unused function parameters */
    "noImplicitReturns": true,               /* Ensures all code paths return values */
    "noFallthroughCasesInSwitch": true,      /* Prevents accidental switch fallthrough */
    
    /* Build Output Configuration
     * Controls how TypeScript generates output files
     */
    "noEmit": true,                          /* Prevents direct TypeScript output (handled by build tools) */
    "isolatedModules": true,                 /* Ensures files are safe for separate compilation */
    "incremental": true,                     /* Enables faster subsequent builds */
    
    /* Project Compatibility Settings
     * Options for maintaining consistent build behavior
     */
    "forceConsistentCasingInFileNames": true, /* Enforces case-sensitive imports */
    "skipLibCheck": true,                     /* Optimizes build by skipping d.ts checks */
    "resolveJsonModule": true                 /* Allows direct JSON imports */
  },
  
  /* Project File Management
   * Specifies which files to include/exclude from compilation
   */
  "include": ["src/**/*.ts", "src/**/*.tsx"], /* Processes all TypeScript/TSX files in src */
  "exclude": ["node_modules"]                 /* Ignores node_modules directory */
}
